{
    "name": "rogramatic/slim-tutorial",
    "description": "A Tutorial on how to create APIs using slim framework",
    "keywords": ["microframework", "rest", "router", "psr4", "slim"],
    "homepage": "http://github.com/justiceroyale1/slim-tutorial",
    "license": "MIT",
    "authors": [
        {
            "name": "Abutu Justice Royale",
            "email": "justiceroyale1@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "monolog/monolog": "^1.17",
        "illuminate/database": "^5.5"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload": {
        "psr-4": {
            "api\\": "src/api/",
            "Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public public/index.php",
        "test": "phpunit"
    }

}
